<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Request Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <!-- Background Section -->
  <div class="w-full min-h-screen bg-[url('images/resize.png')] bg-no-repeat bg-cover px-10 py-5 relative bg-center">
    <!-- Navbar -->
    <nav class="flex items-center">
      <a href="/">
      <img src="images/sng.png" class="w-40 cursor-pointer" />
      </a>
    </nav>
    <!-- Login Form Section -->
    <div class="flex justify-center items-center mt-10">
      <div class="bg-white bg-opacity-90 p-10 rounded-3xl shadow-lg max-w-md w-full">
        <h2 class="text-3xl font-bold text-center text-[#e4007f] mb-6">Registration Form</h2>
        <form action="request" method="post">
          <!-- name -->
          <div class="mb-4">
            <label for="hostelid" class="block text-gray-700 font-semibold mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              placeholder="Enter Your Name"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f]"
            />
          </div>
           <!-- Department -->
          <div class="mb-4">
            <label for="department" class="block text-gray-700 font-semibold mb-2">Department</label>
            <input
              type="text"
              id="department"
              name="department"
              required
              placeholder="Enter Your Department "
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f]"
            />
          </div>
           <!-- semester -->
          <div class="mb-4">
            <label for="hostelid" class="block text-gray-700 font-semibold mb-2">Semester</label>
            <input
              type="text"
              id="semester"
              name="semester"
              required
              placeholder="Enter Your Semester"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f]"
            />
          </div>
          <!-- hostel id -->
          <div class="mb-4">
            <label for="hostelid" class="block text-gray-700 font-semibold mb-2">Create Your Hostel ID</label>
            <input
              type="text"
              id="hostelid"
              name="hostelid"
              required
              placeholder="Enter Your Hostel ID"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f]"
            />
          </div>
          <!-- Password -->
          <div class="mb-6">
            <label for="password" class="block text-gray-700 font-semibold mb-2">Create Your Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              placeholder="Enter your Password"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f]"
            />
          </div>
          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-[#e4007f] hover:bg-[#b60063] text-white font-medium py-2 px-4 rounded-3xl shadow-md hover:shadow-lg transition"
          >
            Register
          </button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
