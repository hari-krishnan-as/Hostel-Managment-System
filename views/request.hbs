<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Request Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <!-- Background Section -->
  <div class="w-full min-h-screen bg-[url('images/resize.png')] bg-no-repeat bg-cover bg-center px-4 sm:px-10 py-5 relative">
    
    <!-- Navbar -->
    <nav class="flex items-center">
      <a href="/">
        <img src="images/sng.png" class="w-28 sm:w-36 md:w-40 cursor-pointer" />
      </a>
    </nav>

    <!-- Registration Form Section -->
    <div class="flex justify-center items-center mt-8 sm:mt-12 md:mt-16">
      <div class="bg-white bg-opacity-90 p-6 sm:p-8 md:p-10 rounded-2xl sm:rounded-3xl shadow-lg max-w-sm sm:max-w-md w-full">
        
        <!-- Title -->
        <h2 class="text-2xl sm:text-3xl font-bold text-center text-[#e4007f] mb-6">
          Registration Form
        </h2>

        <!-- Form -->
        <form action="request" method="post" class="space-y-5">
          
          <!-- Name -->
          <div>
            <label for="name" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              placeholder="Enter Your Name"
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
            />
          </div>

          <!-- Department -->
          <div>
            <label for="department" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Department</label>
            <input
              type="text"
              id="department"
              name="department"
              required
              placeholder="Enter Your Department"
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
            />
          </div>

          <!-- Semester -->
          <div>
            <label for="semester" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Semester</label>
            <input
              type="text"
              id="semester"
              name="semester"
              required
              placeholder="Enter Your Semester"
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
            />
          </div>

          <!-- Registration Date -->
          <div>
            <label for="registrationDate" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Registration Date</label>
            <input
              type="date"
              id="registrationDate"
              name="registrationDate"
              required
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
            />
          </div>

          <!-- Hostel ID -->
          <div>
            <label for="hostelid" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Create Your Hostel ID</label>
            <input
              type="text"
              id="hostelid"
              name="hostelid"
              required
              placeholder="Enter Your Hostel ID"
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
            />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Create Your Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              placeholder="Enter Your Password"
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-[#e4007f] hover:bg-[#b60063] text-white font-medium py-2 sm:py-3 px-4 rounded-2xl sm:rounded-3xl shadow-md hover:shadow-lg transition text-sm sm:text-base"
          >
            Register
          </button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
