<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Request Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full min-h-screen bg-[url('images/resize.png')] bg-no-repeat bg-cover bg-center px-4 sm:px-10 py-5 relative">
    
    <nav class="flex items-center">
      <a href="/">
        <img src="images/sng.png" class="w-28 sm:w-36 md:w-40 cursor-pointer" />
      </a>
    </nav>

    <div class="flex justify-center items-center mt-8 sm:mt-12 md:mt-16">
      <div class="bg-white bg-opacity-90 p-6 sm:p-8 md:p-10 rounded-2xl sm:rounded-3xl shadow-lg max-w-sm sm:max-w-md w-full">
        
        <h2 class="text-2xl sm:text-3xl font-bold text-center text-[#e4007f] mb-6">
          Registration Form
        </h2>

       <form action="request" method="post" class="space-y-5">

  <!-- Name -->
  <div>
    <label for="name" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Name</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      placeholder="Enter Your Name"
      class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
    />
  </div>

  <!-- Department -->
  <div>
    <label for="department" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Department</label>
    <select
      id="department"
      name="department"
      required
      class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
    >
      <option value="">Select Department</option>
      <option value="CA">CA</option>
      <option value="BTech">BTech</option>
      <option value="Management Studies">Management Studies</option>
    </select>
  </div>

  <!-- Program -->
  <div>
    <label for="program" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Program</label>
    <select
      id="program"
      name="program"
      required
      class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
    >
      <option value="">Select Program</option>
    </select>
  </div>


  <!-- Password -->
  <div>
    <label for="password" class="block text-gray-700 font-semibold mb-2 text-sm sm:text-base">Create Your Password</label>
    <input
      type="password"
      id="password"
      name="password"
      required
      placeholder="Enter Your Password"
      class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#e4007f] text-sm sm:text-base"
    />
  </div>

  <!-- Submit -->
  <button
    type="submit"
    class="w-full bg-[#e4007f] hover:bg-[#b60063] text-white font-medium py-2 sm:py-3 px-4 rounded-2xl sm:rounded-3xl shadow-md hover:shadow-lg transition text-sm sm:text-base"
  >
    Register
  </button>
</form>

<!-- JavaScript for Dynamic Program & Semester Options -->
<script>
  const departmentSelect = document.getElementById("department");
  const programSelect = document.getElementById("program");
  
  // Removed: semesterSelect declaration
  // Removed: semesters object

  const programs = {
    CA: ["MCA", "INMCA"],
    BTech: ["NASB", "EEE","CE","ME","CSE","ECE"],
    // Changed key from 'MBA' to 'Management Studies' and updated program list
    "Management Studies": ["MBA", "MBA in Logistics and Supply Chain Management","INMBA"]
  };

  // When department changes
  departmentSelect.addEventListener("change", () => {
    const selectedDept = departmentSelect.value;
    programSelect.innerHTML = `<option value="">Select Program</option>`;
    
    // Removed: Clearing semesterSelect

    if (programs[selectedDept]) {
      programs[selectedDept].forEach(p => {
        const option = document.createElement("option");
        option.value = p;
        option.textContent = p;
        programSelect.appendChild(option);
      });
    }
  });

  // Removed: The entire 'When program changes' event listener
</script>
</body>
</html>
