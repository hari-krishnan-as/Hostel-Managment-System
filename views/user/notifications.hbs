<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-[#16213E] text-[#FFFFFF] min-h-screen flex flex-col md:flex-row">
  
  <!-- Sidebar -->
  <aside id="sidebar"
    class="w-64 bg-[#1A1A2E] flex flex-col justify-between py-6 border-r border-[#0F3460]
           fixed inset-y-0 left-0 transform -translate-x-full md:translate-x-0 transition-transform duration-300 z-50">
    <nav class="flex-1 px-6">
      <h2 class="text-lg font-bold text-red-500 mb-6 uppercase tracking-wide bg-[#0F3460] p-3 rounded-md text-center">
        Dashboard
      </h2>
      <ul class="space-y-4">
        <li>
          <a href="/user/dashboard"
             class="flex items-center space-x-4 p-2 pl-4 rounded-md bg-[#0F3460] border-l-4 border-[#E94560] text-white">
            <i class="fas fa-home text-[#E94560]"></i>
            <span>Home</span>
          </a>
        </li>
        <li>
          <a href="/user/attendance"
             class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition">
            <i class="fas fa-user-check text-[#E94560]"></i>
            <span>Attendance</span>
          </a>
        </li>
        <li>
          <a href="/user/mess-cut"
             class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition">
            <i class="fas fa-utensils text-[#E94560]"></i>
            <span>Mess Cut Leave</span>
          </a>
        </li>
        <li>
          <a href="/user/complaints"
             class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition">
            <i class="fas fa-exclamation-circle text-[#E94560]"></i>
            <span>Complaints</span>
          </a>
        </li>
        <li>
          <a href="/user/suggestions"
             class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition">
            <i class="fas fa-lightbulb text-[#E94560]"></i>
            <span>Suggestions</span>
          </a>
        </li>
      </ul>
    </nav>
    <div class="mt-auto px-6 mb-4">
      <a href="/logout"
         class="flex items-center space-x-4 p-2 rounded-md text-[#EEEEEE] hover:text-[#E94560] transition">
        <i class="fas fa-sign-out-alt"></i>
        <span class="font-semibold">Log Out</span>
      </a>
    </div>
  </aside>

  <!-- Main Content -->
  <div class="flex flex-col flex-1 md:ml-64">
    
    <!-- Header -->
    <header class="w-full flex items-center justify-between py-4 px-6 bg-[#0F3460] text-white">
      <!-- Mobile Menu Button -->
      <button id="menu-btn" class="md:hidden focus:outline-none">
        <i class="fas fa-bars text-2xl"></i>
      </button>

      <!-- Right Icons -->
      <div class="flex items-center space-x-6 ml-auto">
        <a href="/user/notifications" class="hover:text-gray-400 transition">
          <i class="fas fa-bell text-lg"></i>
        </a>
        <a href="/user/settings" class="hover:text-gray-400 transition">
          <i class="fas fa-cog text-lg"></i>
        </a>
        <a href="/user/profile" class="hover:text-gray-400 transition">
          <i class="fas fa-user-circle text-lg"></i>
        </a>
      </div>
    </header>

    <!-- Notifications Section -->
    <main class="flex-1 p-4 md:p-8">
      <h1 class="text-2xl md:text-4xl font-bold text-center text-pink-500 mb-6">Notifications</h1>

      <div class="max-w-2xl mx-auto space-y-4">
        {{#if notifications.length}}
          {{#each notifications}}
            <div class="bg-[#1B1F3B] p-5 rounded-xl shadow-md">
              <p class="text-lg">{{this.message}}</p>
              <p class="text-sm text-gray-400 mt-2">ðŸ“… {{this.createdAt}}</p>
            </div>
          {{/each}}
        {{else}}
          <div class="bg-[#1B1F3B] p-6 rounded-xl shadow-md text-center">
            <h2 class="text-lg md:text-xl font-bold text-gray-300">No new notifications</h2>
          </div>
        {{/if}}
      </div>
    </main>
  </div>

  <!-- JS for Sidebar Toggle -->
  <script>
    const menuBtn = document.getElementById('menu-btn');
    const sidebar = document.getElementById('sidebar');
    
    menuBtn.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
    });
  </script>

</body>
</html>
