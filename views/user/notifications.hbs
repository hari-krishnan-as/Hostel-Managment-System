<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-[#16213E] text-[#FFFFFF] flex h-screen">
    
    <!-- Sidebar -->
    <aside class="w-64 bg-[#1A1A2E] flex flex-col justify-between py-8 border-r border-[#0F3460]">
        <nav class="flex-1 px-8">
            <h2 class="text-lg font-bold text-red-500 mb-6 uppercase tracking-wide bg-[#0F3460] p-3 rounded-md text-center">
                Dashboard
            </h2>
            <ul class="space-y-4">
                <li>
                    <a href="/user/student_dashboard" class="flex items-center space-x-4 p-2 pl-4 rounded-md bg-[#0F3460] border-l-4 border-[#E94560] text-white transition duration-200">
                        <i class="fas fa-home text-[#E94560]"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="/user/attendance" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
                        <i class="fas fa-user-check text-[#E94560]"></i>
                        <span>Attendance</span>
                    </a>
                </li>
                <li>
                    <a href="/user/mess-cut" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
                        <i class="fas fa-utensils text-[#E94560]"></i>
                        <span>Mess Cut Leave form</span>
                    </a>
                </li>
                <li>
                    <a href="/user/complaints" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
                        <i class="fas fa-exclamation-circle text-[#E94560]"></i>
                        <span>Complaints</span>
                    </a>
                </li>
                <li>
                    <a href="/user/suggestions" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
                        <i class="fas fa-lightbulb text-[#E94560]"></i>
                        <span>Suggestions</span>
                    </a>
                </li>
            </ul>
        </nav>
        <div class="mt-auto px-8">
            <a href="/logout" class="flex items-center space-x-4 p-2 rounded-md text-[#EEEEEE] hover:text-[#E94560] transition duration-200">
                <i class="fas fa-sign-out-alt"></i>
                <span class="font-semibold">Log Out</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex flex-col flex-1">
        <!-- Header -->
        <header class="w-full flex items-center justify-end py-4 px-6 bg-[#0F3460] text-white mb-8">
            <div class="flex items-center space-x-6">
                <!-- Notifications -->
                <a href="/notifications" class="hover:text-gray-400 transition-colors duration-200">
                    <i class="fas fa-bell text-white text-lg cursor-pointer"></i>
                </a>

                <!-- Settings -->
                <a href="/settings" class="hover:text-gray-400 transition-colors duration-200">
                    <i class="fas fa-cog text-white text-lg cursor-pointer"></i>
                </a>

                <!-- Profile -->
                <a href="/profile" class="hover:text-gray-400 transition-colors duration-200">
                    <i class="fas fa-user-circle text-white text-lg cursor-pointer"></i>
                </a>
            </div>
        </header>


        <h1 class="text-4xl font-bold text-white-500 mb-6 text-center">Notifications</h1>
        <div class="bg-[#1B1F3B] p-6 rounded-xl shadow-md max-w-md mx-auto mt-4">
            <h2 class="text-xl font-bold text-pink-500 mb-4 text-center"></h2>
            </div>
        </main>
    </div>
</body>
</html>