<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-[#16213E] text-[#FFFFFF] flex flex-col md:flex-row min-h-screen">

  <!-- Sidebar -->
  <aside class="w-full md:w-64 bg-[#1A1A2E] flex flex-col justify-between py-4 md:py-8 border-b md:border-b-0 md:border-r border-[#0F3460]">
    <nav class="flex-1 px-4 md:px-8">
      <h2 class="text-base md:text-lg font-bold text-red-500 mb-4 md:mb-6 uppercase tracking-wide bg-[#0F3460] p-2 md:p-3 rounded-md text-center">
        Dashboard
      </h2>
      <ul class="flex md:flex-col justify-around md:space-y-4 text-sm md:text-base">
        <li>
          <a href="/user/dashboard" class="flex items-center space-x-2 md:space-x-4 p-2 rounded-md bg-[#0F3460] border-l-0 md:border-l-4 border-[#E94560] transition duration-200">
            <i class="fas fa-home text-[#E94560]"></i>
            <span>Home</span>
          </a>
        </li>
        <li>
          <a href="/user/attendance" class="flex items-center space-x-2 md:space-x-4 p-2 rounded-md hover:bg-[#0F3460] hover:border-l-0 md:hover:border-l-4 hover:border-[#E94560] transition duration-200">
            <i class="fas fa-user-check text-[#E94560]"></i>
            <span>Attendance</span>
          </a>
        </li>
        <li>
          <a href="/user/mess-cut" class="flex items-center space-x-2 md:space-x-4 p-2 rounded-md hover:bg-[#0F3460] hover:border-l-0 md:hover:border-l-4 hover:border-[#E94560] transition duration-200">
            <i class="fas fa-utensils text-[#E94560]"></i>
            <span>Mess Cut</span>
          </a>
        </li>
        <li>
          <a href="/user/complaints" class="flex items-center space-x-2 md:space-x-4 p-2 rounded-md hover:bg-[#0F3460] hover:border-l-0 md:hover:border-l-4 hover:border-[#E94560] transition duration-200">
            <i class="fas fa-exclamation-circle text-[#E94560]"></i>
            <span>Complaints</span>
          </a>
        </li>
        <li>
          <a href="/user/suggestions" class="flex items-center space-x-2 md:space-x-4 p-2 rounded-md hover:bg-[#0F3460] hover:border-l-0 md:hover:border-l-4 hover:border-[#E94560] transition duration-200">
            <i class="fas fa-lightbulb text-[#E94560]"></i>
            <span>Suggestions</span>
          </a>
        </li>
      </ul>
    </nav>
    <div class="mt-4 md:mt-auto px-4 md:px-8">
      <a href="/logout" class="flex items-center space-x-2 md:space-x-4 p-2 rounded-md text-[#EEEEEE] hover:text-[#E94560] transition duration-200">
        <i class="fas fa-sign-out-alt"></i>
        <span class="font-semibold">Log Out</span>
      </a>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex flex-col flex-1">
    <!-- Header -->
<header class="w-full flex items-center justify-between md:justify-end py-4 px-4 md:px-6 bg-[#0F3460] text-white mb-6">
  <h1 class="block md:hidden text-lg font-bold">Student Dashboard</h1>

  <div class="flex items-center space-x-4 md:space-x-6 ml-auto">
    <!-- Notification Bell -->
    <a href="/user/notifications" class="relative hover:text-gray-400 transition-colors duration-200 focus:outline-none">
      <i class="fas fa-bell text-white text-lg cursor-pointer"></i>
      {{#if notificationCount}}
        <span class="absolute -top-2 -right-2 bg-red-600 text-white text-xs font-bold px-2 py-0.5 rounded-full">
          {{notificationCount}}
        </span>
      {{/if}}
    </a>

    <!-- Other icons -->
    <a href="/user/settings" class="hover:text-gray-400 transition-colors duration-200">
      <i class="fas fa-cog text-white text-lg cursor-pointer"></i>
    </a>
    <a href="/user/profile" class="hover:text-gray-400 transition-colors duration-200">
      <i class="fas fa-user-circle text-white text-lg cursor-pointer"></i>
    </a>
  </div>
</header>

    <!-- Password Change Section -->
    <h1 class="text-2xl md:text-4xl font-bold text-center mb-4 md:mb-6">Settings</h1>

    <div class="bg-[#1B1F3B] p-4 md:p-6 rounded-xl shadow-md w-[90%] max-w-md mx-auto mb-6">
      <h2 class="text-lg md:text-xl font-bold text-pink-500 mb-4 text-center">Change Password</h2>
      <form action="/change-password" method="POST" class="space-y-4">
        <div>
          <label class="block text-white mb-2 text-sm md:text-base">Current Password</label>
          <input 
            type="password" 
            name="oldPassword"   
            placeholder="Enter current password"
            required
            class="w-full p-2 md:p-3 rounded-md bg-[#0F3460] text-white focus:outline-none focus:ring-2 focus:ring-pink-500"
          >
        </div>

        <div>
          <label class="block text-white mb-2 text-sm md:text-base">New Password</label>
          <input 
            type="password" 
            name="newPassword"  
            placeholder="Enter new password"
            required
            class="w-full p-2 md:p-3 rounded-md bg-[#0F3460] text-white focus:outline-none focus:ring-2 focus:ring-pink-500"
          >
        </div>

        <div>
          <label class="block text-white mb-2 text-sm md:text-base">Confirm New Password</label>
          <input 
            type="password" 
            name="confirmPassword"   
            placeholder="Confirm new password"
            required
            class="w-full p-2 md:p-3 rounded-md bg-[#0F3460] text-white focus:outline-none focus:ring-2 focus:ring-pink-500"
          >
        </div>

        <button 
          type="submit" 
          class="w-full bg-pink-500 text-white p-2 md:p-3 rounded-md hover:bg-pink-600 transition">
          Update Password
        </button>
      </form>
    </div>
  </main>
</body>
</html>
