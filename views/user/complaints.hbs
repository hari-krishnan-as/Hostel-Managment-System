<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Complaints</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-[#16213E] text-[#FFFFFF] flex h-screen">
    <aside class="w-64 bg-[#1A1A2E] flex flex-col justify-between py-8 border-r border-[#0F3460]">
        <nav class="flex-1 px-8">
            <a href="/student-dashboard" class="block">
                <div class="text-lg font-bold text-red-500 mb-6 uppercase tracking-wide bg-[#0F3460] p-3 rounded-md text-center cursor-pointer hover:bg-[#1e4a80] transition">
                    Dashboard
                </div>
            </a>
            <ul class="space-y-4">
                <li>
                    <a href="/student-dashboard" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
                        <i class="fas fa-home text-[#E94560]"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="/attendance" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
                        <i class="fas fa-user-check text-[#E94560]"></i>
                        <span>Attendance</span>
                    </a>
                </li>
                <li>
                    <a href="/mess-cut" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
                        <i class="fas fa-utensils text-[#E94560]"></i>
                        <span>Mess Cut Leave form</span>
                    </a>
                </li>
                <li>
                    <a href="/complaints" class="flex items-center space-x-4 p-2 pl-4 rounded-md bg-[#0F3460] border-l-4 border-[#E94560] text-white transition duration-200">
                        <i class="fas fa-exclamation-circle text-[#E94560]"></i>
                        <span>Complaints</span>
                    </a>
                </li>
        <li>
          <a href="/suggestions" class="flex items-center space-x-4 p-2 pl-4 rounded-md hover:bg-[#0F3460] hover:border-l-4 hover:border-[#E94560] transition duration-200">
            <i class="fas fa-lightbulb text-[#E94560]"></i>
                  <span>Suggestions</span>
          </a>
        </li>
      </ul>
    </nav>
    <div class="mt-auto px-8">
      <a href="/logout" class="flex items-center space-x-4 p-2 rounded-md hover:text-[#E94560]">
        <i class="fas fa-sign-out-alt"></i><span class="font-semibold">Log Out</span>
      </a>
    </div>
  </aside>

  <!-- Main -->
  <div class="flex-1 p-8">
    <h1 class="text-2xl font-bold text-pink-500 mb-6 text-center">Complaints</h1>

    <div class="grid grid-cols-2 gap-8">
      
      <!-- Complaint Form -->
      <div class="bg-[#1B1F3B] p-6 rounded-xl shadow-md">
        <h2 class="text-xl font-bold text-pink-500 mb-4">Submit Complaint</h2>
        <form action="/complaints" method="POST">
          <textarea 
            name="complaint" 
            placeholder="Enter your complaint..." 
            required
            class="w-full p-3 rounded-md bg-[#0F3460] text-white mb-4"></textarea>
          <button type="submit" 
            class="w-full bg-pink-500 text-white p-2 rounded-md hover:bg-pink-600">
            Submit
          </button>
        </form>
      </div>

      <!-- Complaint History -->
      <div class="bg-[#1B1F3B] p-6 rounded-xl shadow-md">
        <h2 class="text-xl font-bold text-pink-500 mb-4">Complaint History</h2>

        {{#if complaints.length}}
        <table class="w-full text-white border-collapse">
          <thead>
            <tr class="bg-[#0F3460]">
              <th class="p-2">Complaint</th>
              <th class="p-2">Date</th>
              <th class="p-2">Status</th>
            </tr>
          </thead>
          <tbody>
            {{#each complaints}}
            <tr class="border-b border-gray-600">
              <td class="p-2">{{this.text}}</td>
              <td class="p-2">{{this.date}}</td>
              <td class="p-2">{{this.status}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{else}}
        <p class="text-gray-400">No complaints submitted yet.</p>
        {{/if}}
      </div>
    </div>
  </div>
</body>
</html>
